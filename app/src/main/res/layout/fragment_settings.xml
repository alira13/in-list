<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".settings.presentation.SettingsFragment">

    <TextView
        style="@style/SettingsLargeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_general"
        android:gravity="center|start"
        android:foreground="?attr/selectableItemBackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/settings_theme_tv"
            style="@style/SettingsSmallLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/lbl_dark_theme" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="true"
            app:thumbTint="?attr/colorPrimary"
            app:trackTint="?attr/colorSecondary" />
    </LinearLayout>


    <TextView
        android:id="@+id/settings_account_tv"
        style="@style/SettingsSmallLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/lbl_account_settings"
        app:drawableEndCompat="@drawable/ic_arrow_forward" />

    <TextView
        style="@style/SettingsLargeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_help_amp_support"
        android:foreground="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/settings_help_tv"
        style="@style/SettingsSmallLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_help"
        app:drawableEndCompat="@drawable/ic_arrow_forward" />

    <TextView
        style="@style/SettingsSmallLabel"
        android:layout_width="match_parent"
        android:id="@+id/settings_support_tv"
        android:layout_height="wrap_content"
        android:text="@string/lbl_support"
        app:drawableEndCompat="@drawable/ic_arrow_forward" />

    <TextView
        style="@style/SettingsSmallLabel"
        android:layout_width="match_parent"
        android:id="@+id/settings_share"
        android:layout_height="wrap_content"
        android:text="@string/lbl_share_app"
        app:drawableEndCompat="@drawable/ic_arrow_forward" />


    <TextView
        style="@style/SettingsSmallLabel"
        android:layout_width="match_parent"
        android:id="@+id/settings_about_tv"
        android:layout_height="wrap_content"
        android:text="@string/lbl_about_app"
        app:drawableEndCompat="@drawable/ic_arrow_forward" />
</LinearLayout>