<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".settings.presentation.SettingsFragment">

    <TextView
        android:id="@+id/settings_account_tv"
        style="@style/SettingsMenuTv"
        android:text="@string/account_settings" />

    <TextView
        android:id="@+id/settings_theme_tv"
        style="@style/SettingsMenuTv"
        android:text="@string/theme_settings" />

    <TextView
        android:id="@+id/settings_support_tv"
        style="@style/SettingsMenuTv"
        android:text="@string/support" />

    <TextView
        android:id="@+id/settings_share"
        style="@style/SettingsMenuTv"
        android:text="@string/share_app" />

    <TextView
        android:id="@+id/settings_about_tv"
        style="@style/SettingsMenuTv"
        android:text="@string/about_app" />
</LinearLayout>